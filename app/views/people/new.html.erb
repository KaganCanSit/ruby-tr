<%= render 'shared/header' %>
<div class="main-container">
  <div class="main wrapper clearfix">
    <br />
    <%= form_for @person do |f| %>
        <p>
          <%= f.label :name %><br>
          <%= f.text_field :name %>
          <% if @person.errors.has_key?(:name) %>
            <%= @person.errors[:name].join(',') %>
          <% end %>
        </p>

        <p>
          <%= f.label :email %><br>
          <%= f.text_field :email %>
          <% if @person.errors.has_key?(:email) %>
            <%= @person.errors[:email].join(',') %>
          <% end %>
        </p>

        <p>
          <%= f.label :web %><br>
          <%= f.text_field :web %>
        </p>

        <p>
          <%= f.label :github %><br>
          <%= f.text_field :github %>
        </p>

        <p>
          <%= f.label :twitter %><br>
          <%= f.text_field :twitter %>
        </p>

        <p>
          <%= f.label :humanizer_answer, @person.humanizer_question %>
        </p>
        <p>
          <%= f.text_field :humanizer_answer %>
          <% if @person.errors.has_key?(:humanizer_answer) %>
            <%= @person.errors[:humanizer_answer].join(',') %>
          <% end %>
        </p>

        <%= f.hidden_field :humanizer_question_id %>

        <p>
          <%= f.submit 'Kaydet' %>
        </p>
    <% end %>
  </div>
</div>

<%= render 'shared/footer' %>
